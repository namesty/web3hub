{
  "name": "root",
  "description": "Web3Hub Monorepo",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/web3-api/web3hub.git"
  },
  "workspaces": {
    "packages": [
      "./packages/**/*"
    ]
  },
  "scripts": {
    "start": "concurrently \"yarn:start:ui\" \"yarn:start:api\"",
    "start:api": "lerna exec --scope @web3hub/api -- yarn dev",
    "start:ui": "lerna exec --scope @web3hub/ui -- yarn dev"
  },
  "devDependencies": {
    "lerna": "4.0.0",
    "concurrently": "6.0.0"
  }
}
